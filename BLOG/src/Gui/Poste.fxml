<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="600" prefWidth="800" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Gui.PosteController">
    
    <TableView fx:id="posteTable" layoutX="50" layoutY="100" prefHeight="400" prefWidth="700">
        <columns>
            <TableColumn fx:id="titreColumn" prefWidth="216.0" text="Titre" />
            <TableColumn fx:id="descriptionColumn" prefWidth="264.0" text="Description" />
            <TableColumn fx:id="imageColumn" prefWidth="219.0" text="Image" />
        </columns>
    </TableView>
    
    <Button layoutX="577.0" layoutY="577.0" onAction="#addPoste" prefHeight="26.0" prefWidth="200.0" text="ADD POSTE" />
    
    <Button layoutX="300.0" layoutY="467.0" onAction="#updatePoste" prefHeight="26.0" prefWidth="200.0" text="UPDATE POSTE" />
    
    <Button layoutX="536.0" layoutY="467.0" onAction="#deletePoste" prefHeight="26.0" prefWidth="200.0" text="DELETE POSTE" />
    
    <Button layoutX="61.0" layoutY="467.0" onAction="#showPoste" prefHeight="26.0" prefWidth="200.0" text="OPEN POSTE" />
    
    <TextField fx:id="titreField" layoutX="358.0" layoutY="524.0" prefHeight="25" prefWidth="200" promptText="Enter Titre" />
    
    <TextArea fx:id="descriptionField" layoutX="358.0" layoutY="627.0" prefHeight="85.0" prefWidth="200" promptText="Enter Description" />
    
    <TextField fx:id="imageField" layoutX="358.0" layoutY="577.0" prefHeight="25" prefWidth="200" promptText="Enter Image" />
    
    <Button layoutX="50.0" layoutY="654.0" onAction="#searchPoste" prefHeight="26.0" prefWidth="200.0" text="SEARCH" />
    
    <TextField fx:id="searchField" layoutX="61.0" layoutY="608.0" prefHeight="25" prefWidth="200" promptText="Enter Search" />
   
    <!-- <Button layoutX="317.0" layoutY="647.0" onAction="#choosePicture" prefHeight="25" prefWidth="200" text="Choose Picture" />  -->
   
    <!-- -->
</AnchorPane>
